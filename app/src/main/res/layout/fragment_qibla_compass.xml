<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.qibla.QiblaCompassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="96dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface_card"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            app:strokeColor="@color/slot_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/qibla_title"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_qibla_bearing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="@color/text_primary"
                    tools:text="Kıble açısı: 151°" />

                <TextView
                    android:id="@+id/text_qibla_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/text_secondary"
                    tools:text="Mesafe: 2.140 km" />

                <TextView
                    android:id="@+id/text_qibla_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/text_secondary"
                    tools:text="Telefon yönü: 123°" />

                <TextView
                    android:id="@+id/text_qibla_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="@color/text_secondary"
                    tools:text="Hizalanmadı" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_refresh_location"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/qibla_refresh_location" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="12dp"
            android:foregroundGravity="center">

            <View
                android:id="@+id/view_compass_dial"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_compass_dial" />

            <ImageView
                android:id="@+id/image_qibla_pointer"
                android:layout_width="92dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:rotation="0"
                android:src="@drawable/ic_qibla_pointer"
                android:tint="@color/qibla_aligned" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_location_online_dot" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_qibla_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/qibla_calibration_hint"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_secondary" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
