<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.prayertimes.PrayerTimesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="92dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layout_city_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/surface_card"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/slot_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_app_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view_location_status"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_location_online_dot" />

                        <TextView
                            android:id="@+id/text_city_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            tools:text="İstanbul" />

                        <TextView
                            android:id="@+id/text_city_auto_badge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_active_badge"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="3dp"
                            android:text="@string/city_auto_badge"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="@color/brand_primary" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_notification_state"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/notifications_active"
                    android:src="@drawable/ic_notification_on"
                    app:tint="@color/brand_primary" />

                <ImageButton
                    android:id="@+id/button_refresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/refresh"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_popup_sync"
                    app:tint="@color/brand_primary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_city_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_active_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/city_required_warning"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/brand_primary"
            android:visibility="gone" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_hero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/surface_card"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/brand_primary_soft"
            app:strokeWidth="1dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-30dp"
                    android:layout_marginEnd="-14dp"
                    android:background="@drawable/bg_hero_glint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/text_hero_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hero_next_prayer_title"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="@color/text_secondary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_next_prayer_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                tools:text="AKŞAM" />

                            <TextView
                                android:id="@+id/text_next_prayer_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                tools:text="19:30" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_next_prayer_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/current_prayer_badge"
                                app:chipBackgroundColor="@color/active_badge_bg"
                                app:chipStrokeColor="@color/slot_border_active"
                                app:chipStrokeWidth="1dp"
                                app:chipMinHeight="30dp"
                                app:chipStartPadding="8dp"
                                app:chipEndPadding="8dp"
                                app:chipIcon="@drawable/ic_notification_on"
                                app:chipIconTint="@color/brand_accent"
                                app:textStartPadding="2dp"
                                android:textColor="@color/brand_accent" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="148dp"
                            android:layout_height="148dp"
                            android:layout_marginStart="10dp">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/progress_next_prayer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:indeterminate="false"
                                app:indicatorColor="@color/brand_primary"
                                app:indicatorSize="148dp"
                                app:trackColor="@color/brand_primary_soft"
                                app:trackThickness="10dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_remaining_large"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold"
                                    tools:text="01:12:33" />

                                <TextView
                                    android:id="@+id/text_remaining_hint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="@string/remaining_short_label"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                    android:textColor="@color/text_secondary" />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_day_bounds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_secondary"
                        tools:text="İmsak 04:52 • Yatsı 20:45" />

                    <TextView
                        android:id="@+id/text_offline_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_active_badge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="@string/offline_cache_badge"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                        android:textColor="@color/brand_primary"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_last_updated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/text_secondary"
                        tools:text="Son güncelleme: 25 Şubat 2026" />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/surface_card"
            app:cardCornerRadius="18dp"
            app:cardElevation="1dp"
            app:strokeColor="@color/slot_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/today_prayer_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all_short"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="@color/brand_primary" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_prayer_slots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="6"
                    tools:listitem="@layout/item_prayer_slot" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_manage_notifications"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:text="@string/manage_notifications_shortcut" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_ramadan_shortcut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/brand_primary"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ramadan_card_title"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/text_ramadan_iftar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@android:color/white"
                        tools:text="İftar 19:30" />

                    <TextView
                        android:id="@+id/text_ramadan_sahur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/brand_primary_soft"
                        tools:text="Sahur 04:42" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_hadith_shortcut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/surface_card"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/slot_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hadith_card_title"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="@color/brand_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/hadith_card_preview"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_primary"
                        android:maxLines="3" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_qibla_compass_shortcut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/surface_card"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/slot_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qibla_compass_shortcut"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="@color/brand_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/qibla_compass_hint"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_primary"
                        android:maxLines="3" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_qibla_map_shortcut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/surface_card"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:strokeColor="@color/slot_border"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qibla_map_shortcut"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="@color/brand_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/qibla_map_hint"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_primary"
                        android:maxLines="3" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
